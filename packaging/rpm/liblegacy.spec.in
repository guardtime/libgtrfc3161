%if 0%{?rhel} == 7
  %define dist .el7
  # CentOS 7 would force ".el7.centos", we want to avoid that.
%endif

Summary: Guardtime Legacy API for C
Name: liblegacy
Version: @VERSION@
Release: 1%{?dist}
License: ASL 2.0
Group: Development/Libraries
Source: http://download.guardtime.com/%{name}-%{version}.tar.gz
URL: http://www.guardtime.com/
Vendor: Guardtime AS
Packager: Guardtime AS <info@guardtime.com>
Requires: libksi
BuildRequires: autoconf
BuildRequires: automake
BuildRequires: libtool
BuildRequires: libksi-devel

%description
Client-side runtime libraries for converting
Guardtime's legacy signatures to KSI signatures.

%package devel
Summary: Guardtime Legacy API for C
Group: Development/Libraries
Requires: %{name} = %{version}-%{release}
Requires: libksi-devel

%description devel
Client-side runtime libraries for converting
Guardtime's legacy signatures to KSI signatures.

%prep
%setup
autoreconf -iv

%build
%configure
make

%install
rm -rf %{buildroot}
make install DESTDIR=%{buildroot}

%files
%defattr(644,root,root,755)
%{_libdir}/liblegacy.so
%{_libdir}/liblegacy.so.*
%{_docdir}/%{name}/changelog
%{_docdir}/%{name}/license

%files devel
%defattr(644,root,root,755)
%{_includedir}/legacy/parseasn1.h
%{_includedir}/legacy/tsconvert.h
%{_includedir}/legacy/version.h
%{_libdir}/liblegacy.a
%{_libdir}/liblegacy.la
%{_libdir}/pkgconfig/liblegacy.pc
